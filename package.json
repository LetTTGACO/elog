{
  "name": "elog",
  "version": "1.0.0",
  "description": "一个多写作平台多部署平台的博客生成工具",
  "homepage": "https://github.com/LetTTGACO/eblog#readme",
  "author": "1874 <me@mail.1874.cool>",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "keywords": [
    "blog",
    "yuque",
    "notion",
    "hexo",
    "hugo",
    "vitepress"
  ],
  "bugs": {
    "url": "https://github.com/LetTTGACO/eblog/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LetTTGACO/elog.git"
  },
  "scripts": {
    "build": "pnpm --filter=@elog/* run build",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "husky install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm changeset publish"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "father": "^4.1.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.4",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "webpack",
        "eslint",
        "@algolia/client-search",
        "caniuse-db"
      ]
    }
  }
}
